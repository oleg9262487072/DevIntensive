<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_Primary</item>
        <item name="colorPrimaryDark">@color/color_PrimaryDark</item>
        <item name="colorAccent">@color/color_Accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>
    <style name="icon.left">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>
    <style name="icon.right">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
    </style>
    <style name="head">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="text.title" parent="text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="match_and_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_double">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="appbar" parent="match_and_wrap">
        <item name="android:background">@color/color_Primary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="user_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_image_height_size</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/user_profile</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="sub_linear_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_view.top" parent="text_view">
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:textSize">@dimen/spacing_medial_24</item>
        <item name="android:text">@string/info.title.quantity</item>
    </style>

    <style name="text_view.bottom" parent="text_view">
        <item name="android:layout_marginBottom">@dimen/spacing_medial_24</item>
        <item name="android:textSize">@dimen/size_mini_small_16</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginBottom">@dimen/size_small_24</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_big_72</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="appbar_style">
        <item name="android:background">@color/ultramarine</item>
        <item name="android:theme">@style/app_theme.app_bar_overlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="app_theme.app_bar_overlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="main_imageview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="toolbar_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:theme">@style/app_theme.popup_overlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="app_theme.popup_overlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_right_space</item>
    </style>

    <style name="nav_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="draw_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_larger_172</item>
        <item name="android:paddingTop">@dimen/spacing_normal_24</item>
        <item name="android:paddingLeft">@dimen/spacing_small_16</item>
        <item name="android:paddingRight">@dimen/spacing_small_16</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
        <item name="android:background">@drawable/drawer_header_background</item>
    </style>

    <style name="avatar_style">
        <item name="android:layout_width">@dimen/drawer_image_60</item>
        <item name="android:layout_height">@dimen/drawer_image_60</item>
        <item name="android:background">@drawable/circle_avatar_image</item>
        <item name="android:layout_marginTop">@dimen/margin_small_16</item>
    </style>

    <style name="user_name_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="user_email_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>



</resources>
